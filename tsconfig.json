{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./",
		"outDir": "dist",
		"lib": [
			"esnext",
			"dom"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"@server/*": [
				"src/server/*"
			],
			"@web/*": [
				"src/web/*"
			],
			"@core/*": [
				"src/core/*"
			],
		},
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}